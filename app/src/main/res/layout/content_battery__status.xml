<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Battery_Status"
    android:background="#D3D3D3"
    tools:showIn="@layout/app_bar_battery__status">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#C0C0C0"
        android:id="@+id/card_battery"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp">
    <ProgressBar
        android:id="@+id/determinateBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:progressTint="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:progressBackgroundTint="#8470ff"
        android:layout_height="100dp"
        android:progress="75"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Battery Charge"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal"
            android:labelFor="@id/determinateBar"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75%"
            android:id="@+id/percentAge"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card_battery"
        android:id="@+id/bottomCard"
        android:backgroundTint="#3793C6DD"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLay"
            android:layout_gravity="center_horizontal"
            >
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/FirstTable"
            android:layout_gravity="center_horizontal"
            >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:text="Battery Health:"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:text="Good"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:textColor="#8470ff"
                    />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:text="Charging Status:"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:text="Discharging"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:textColor="#8470ff"
                    />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:text="Charging Cycle:"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:text="1132"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:textColor="#8470ff"
                    />
            </TableRow>
            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Temperature:"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="23 C"
                android:textAlignment="textEnd"
                android:textSize="20dp"
                android:textColor="#8470ff"
                />
        </TableRow>
        </TableLayout>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FirstTable"
                android:id="@+id/batteryCard"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="30dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:src="@mipmap/battery_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Battery Info"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#8470ff"
                    android:id="@+id/BatterInfoHead"
                    android:layout_marginLeft="90dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/BatterInfoHead"
                    android:layout_alignLeft="@id/BatterInfoHead"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:text="Manufacture Details\n, Design Capacity"
                    />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/batteryCard"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="30dp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:src="@mipmap/loginimage"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#8470ff"
                        android:id="@+id/Batter"
                        android:layout_marginLeft="100dp"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/Batter"
                        android:layout_alignLeft="@id/Batter"
                        android:layout_marginLeft="20dp"
                        android:textAlignment="center"
                        android:text="Tips, Support,\n Contact Info, Help"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>