<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Battery_Status"
    tools:showIn="@layout/app_bar_battery__status">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="State of Health Graph Status"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/HeadSOH"
        />
    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_below="@id/HeadSOH"
        android:layout_height="200dip"
        android:layout_margin="10dp"
        android:id="@+id/StatusOfHealth" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------------------"
        android:layout_below="@id/StatusOfHealth"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>